@inject IStringLocalizer<SharedResources> Localizer
@inject SampleProject.Services.UserSessionService UserSession
@implements IDisposable
@rendermode InteractiveServer

@if (UserSession.IsLoggedIn)
{
    <div class="user-header alert alert-info mb-3" role="alert">
        <strong>@Localizer["UserHeader_LoggedInAs"]</strong> @UserSession.Username
    </div>
}

@code {
    protected override void OnInitialized()
    {
        UserSession.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserSession.OnChange -= StateHasChanged;
    }
}
