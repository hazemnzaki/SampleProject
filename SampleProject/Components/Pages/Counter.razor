@page "/counter"
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>@Localizer["Counter_PageTitle"]</PageTitle>

<h1>@Localizer["Counter_Heading"]</h1>

<p role="status">@Localizer["Counter_CurrentCount", currentCount]</p>

<button class="btn btn-primary" @onclick="IncrementCount">@Localizer["Counter_ClickMe"]</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
